<div style="width: 500px; margin: 0 auto;">
  <div class="card m-3">
    <div class="card-header">
      <h5><%= I18n.t('views.inner_text.dashboards.add_user') %> </h5>
    </div>
    <div class="card-body">
      <%= form_with(model: @user, url: dashboard_add_user_path) do |form| %>
        <div class="mt-4">
          <%= form.label I18n.t('activerecord.attributes.first_name') %> </br>
          <%= form.text_field :first_name, style: 'width:100%', placeholder: I18n.t('views.placeholder.first_name'), required: true %>
          <% @user.errors.full_messages_for(:first_name).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div>
          <%= form.label I18n.t('activerecord.attributes.last_name') %> </br>
          <%= form.text_field :last_name, style: 'width:100%', placeholder: I18n.t('views.placeholder.last_name'), required: true %>
          <% @user.errors.full_messages_for(:last_name).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div>
          <%= form.label I18n.t('activerecord.attributes.email') %> </br>
          <%= form.email_field :email, style: 'width:100%', placeholder: I18n.t('views.placeholder.email'), required: true %>
          <% @user.errors.full_messages_for(:email).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div>
          <%= form.label I18n.t('activerecord.attributes.phone') %> </br>
          <%= form.phone_field :phone, style: 'width:100%', placeholder: I18n.t('views.placeholder.phone'), required: true %>
          <% @user.errors.full_messages_for(:phone).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div>
          <%= form.label I18n.t('activerecord.attributes.address') %> </br>
          <%= form.text_area :address, style: 'width:100%', placeholder: I18n.t('views.placeholder.address'), required: true %>
          <% @user.errors.full_messages_for(:address).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div>
          <%= form.label I18n.t('activerecord.attributes.password') %> </br>
          <%= form.password_field :password, style: 'width:100%', placeholder: I18n.t('views.placeholder.password'), required: true %>
          <% @user.errors.full_messages_for(:password).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div>
          <%= form.label I18n.t('activerecord.attributes.password_confirmation') %> </br>
          <%= form.password_field :password_confirmation, style: 'width:100%', placeholder: I18n.t('views.placeholder.password_confirmation'), required: true %>
          <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div>
          <%= form.label I18n.t('activerecord.attributes.role') %> </br>
          <%= form.select :role,
                          [
                            ["Learner", "learner"],
                            ["Instructor", "instructor"],
                            ["Admin", "admin"]
                          ],
                          selected: "learner", style: 'width:100%;' %>
        </div>
        <br>
        <div class="row">
          <div class="col-6">
            <%= form.submit I18n.t('views.button.add'),class: 'btn btn-primary'  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
