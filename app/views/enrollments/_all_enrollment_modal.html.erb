<div class="modal" id="myModalcourse">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title">Enroll Here</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <%= form_with(url: "/dashboard/assign_to_all/#{course.id}", method: 'post') do |form| %>
          <div>
            <label for="completion_time">Deadline</label><br>
            <%= form.datetime_local_field :completion_time, required: true %>
          </div>
          <div class="row mt-3">
            <div class="col-4">
              <%= form.submit "Enroll", class: "btn btn-sm btn-info"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
