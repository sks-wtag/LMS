<div style="width: 500px; margin: 0 auto;">
  <div class="card mt-5">
    <div class="card-header">
      <h5>Change password </h5>
    </div>
    <div class="card-body">
      <%= form_with url: password_path(params[:password_reset_token]), scope: :user, method: :put do |form| %>
        <div class="form-group">
          <%= form.label :password, "Password" %><br>
          <%= form.password_field :password, class: "form-control", placeholder: "Password", required: true %>
          <% @user.errors.full_messages_for(:password).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>
        <div class="form-group">
          <%= form.label :password_confirmation, "Confirmation password" %><br>
          <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirmation Password", required: true %>
        </div>
        <br>
        <%= form.submit "Update Password", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
