<div style="width: 400px; margin: 0 auto;">
  <div class="card mt-5">
    <div class="card-header">
      <h5><%= I18n.t('views.button.forgot_password') %></h5>
    </div>
    <div class="card-body">
      <%= form_with url: passwords_path, scope: :user do |form| %>
        <%= form.email_field :email, placeholder: I18n.t('views.placeholder.email'), required: true %>
        <%= form.submit I18n.t('views.button.send_mail') %>
      <% end %>
    </div>
  </div>
</div>
