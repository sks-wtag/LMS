<div style="width: 500px; margin: 0 auto; margin-top: 50px;">
  <div class="card">
    <div class="card-header">
      <h5><%= I18n.t('views.button.login') %></h5>
    </div>
    <div class="card-body">
      <%= form_with url: login_path, scope: :user do |form| %>
        <div style="text-align: center;">
          <div style="text-align: left;">
            <label for= <%= I18n.t('activerecord.attributes.email') %> ><%= I18n.t('activerecord.attributes.email') %></label><br>
            <%= form.email_field :email, placeholder: I18n.t('views.placeholder.email'), required: true %>
          </div>
          <div style="text-align: left;">
            <label for=<%= I18n.t('activerecord.attributes.password') %>><%= I18n.t('activerecord.attributes.password') %></label><br>
            <%= form.password_field :password, placeholder: I18n.t('views.placeholder.password'), required: true %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-4">
            <%= form.submit I18n.t('views.button.login') %>
          </div>
          <div class="col-4">
            <%= link_to I18n.t('views.button.forgot_password'), new_password_path %>
          </div>
          <div class="col-4">
            <%= link_to  I18n.t('views.button.sign_up_here'), sign_up_path %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
