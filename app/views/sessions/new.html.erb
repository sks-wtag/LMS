<div style="width: 500px; margin: 0 auto; margin-top: 50px;">
  <div class="card">
    <div class="card-header">
      <h5>Login</h5>
    </div>
    <div class="card-body">
      <%= form_with url: login_path, scope: :user do |form| %>
        <div style="text-align: center;">
          <div style="text-align: left;">
            <label for="email">Email</label><br>
            <%= form.email_field :email, placeholder: "Enter your valid email", required: true %>
          </div>
          <div style="text-align: left;">
            <label for="password">Password</label><br>
            <%= form.password_field :password, placeholder: "Enter your password", required: true %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-4">
            <%= form.submit "Sign In" %>
          </div>
          <div class="col-4">
            <%= link_to "Forgot password", new_password_path %>
          </div>
          <div class="col-4">
            <%= link_to "Sign up here", sign_up_path %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
