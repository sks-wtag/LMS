<div style="width: 350px; margin: 0 auto; margin-top: 50px;">
  <div class="card">
    <div class="card-header">
      <h5>Login</h5>
    </div>
    <div class="card-body">
      <%= form_with url: login_path, scope: :user do |form| %>
        <div style="text-align: center;">
          <%= form.label :email %><br>
          <%= form.email_field :email, required: true %>
        </div>
        <div style="text-align: center;">
          <%= form.label :password %><br>
          <%= form.password_field :password, required: true %>
        </div>
        <br>

        <div class="row">
          <div class="col-6">
            <%= form.submit "Sign In" %>
          </div>
          <div class="col-6">
            <%= link_to "Sign up here", sign_up_path %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
