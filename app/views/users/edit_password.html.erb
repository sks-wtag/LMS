<div style="width: 350px; margin: 0 auto;">
  <div class="card mt-5">
    <div class="card-header">
      <h5><%= I18n.t('views.button.change_password') %> </h5>
    </div>
    <div class="card-body">
      <%= form_with(url: 'change_password', method: 'post') do |form| %>
        <div>
          <label for="user_email"><%= I18n.t('activerecord.attributes.email') %></label><br>
          <%= text_field_tag 'user[email]', @user.email, disabled: true %>
        </div>
        <div>
          <label for="user_current_password"><%= I18n.t('views.label.current_password') %></label><br>
          <%= password_field_tag 'user[current_password]', @user.current_password %>
        </div>
        <div>
          <label for="user_password"><%= I18n.t('activerecord.attributes.password') %></label><br>
          <%= password_field_tag 'user[password]', @user.password %>
        </div>
        <div>
          <label for="user_password_confirmation"><%= I18n.t('activerecord.attributes.password_confirmation') %></label><br>
          <%= password_field_tag 'user[password_confirmation]', @user.password_confirmation %>
        </div>
        <br>
        <div class="row">
          <div class="col-6">
            <%= form.submit I18n.t('views.button.update') %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
